      "shortcuts": [
        [
          "DiskInfo64K.exe",
          "CrystalDiskInfo Kurei Kei Edition"
        ]
      ]
    },
    "32bit": {
      "shortcuts": [
        [
          "DiskInfo32K.exe",
          "CrystalDiskInfo Kurei Kei Edition"
        ]
      ]
    },
    "arm64": {
      "shortcuts": [
        [
          "DiskInfoA64K.exe",
