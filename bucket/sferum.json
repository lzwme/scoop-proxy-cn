  "architecture": {
    "32bit": {
      "installer": {
        "script": [
          "New-Item -Path \"$dir\\app\" -ItemType Directory",
          "7z x -y \"$dir\\`$PLUGINSDIR\\app-32.7z\" -o\"$dir\\app\"",
