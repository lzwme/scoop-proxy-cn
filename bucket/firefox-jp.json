{
  "$schema": "https://ghproxy.net/https://raw.githubusercontent.com/lukesampson/scoop/master/schema.json",
  "version": "115.0.2",
  "description": "Popular open source web browser with Japanese localization.",
  "homepage": "https://www.mozilla.org/firefox/",
  "license": "MPL-2.0",
  "notes": [
    "To set profile 'Scoop' as *DEFAULT*, or profiles/settings was lost after update:",
    "  - Run 'Firefox Profile Manager', choose 'Scoop' then click 'Start Firefox'.",
    "  - Visit 'about:profiles' page in Firefox to check *DEFAULT* profile.",
    "For details: https://support.mozilla.org/en-US/kb/profile-manager-create-remove-switch-firefox-profiles"
  ],
  "architecture": {
    "64bit": {
      "url": "https://archive.mozilla.org/pub/firefox/releases/115.0.2/win64/ja/Firefox%20Setup%20115.0.2.exe#/dl.7z",
      "hash": "sha512:572ad2ede088621a82e8adeb51621fd6480b29239af1c9080a071d723ef62877a27f0a93ccbdd5b5894f367a41fcd5ccf4188089def819fdf6ccfb64fbf8a1a8"
    },
    "32bit": {
      "url": "https://archive.mozilla.org/pub/firefox/releases/115.0.2/win32/ja/Firefox%20Setup%20115.0.2.exe#/dl.7z",
      "hash": "sha512:08922cc59b51c6004dfb4cfdcb5e20d32405ef69bc971f6d8654e62296f353ee08a7164bbc67cd2892f52130e18469edadf03c86fb0027f7abf4f63caa96ae42"
    }
  },
  "extract_dir": "core",
  "post_install": [
    "$scoop_profile = Join-Path $persist_dir Profiles | Join-Path -ChildPath Scoop",
    "ensure $scoop_profile | Out-Null",
    "firefox -CreateProfile \"Scoop $scoop_profile\"",
    "$Addition = Join-Path $persist_dir addition",
    "if (Test-Path $Addition) {",
    "  info 'Copying additional items...'",
    "  Copy-Item -Path (Join-Path $Addition *) -Destination $dir -Force -Recurse -ErrorAction SilentlyContinue",
    "}"
  ],
  "bin": "firefox.exe",
  "shortcuts": [
    [
      "firefox.exe",
      "Firefox"
    ],
    [
      "firefox.exe",
      "Firefox Profile Manager",
      "-P"
    ]
  ],
  "persist": [
    "distribution",
    "Profiles"
  ],
  "checkver": {
    "url": "https://www.mozilla.org/en-US/firefox/notes/",
    "regex": "<div class=\"c-release-version\">([\\d.]+)</div>"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/ja/Firefox%20Setup%20$version.exe#/dl.7z",
        "hash": {
          "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
          "regex": "$sha512\\s+win64/ja/$basename"
        }
      },
      "32bit": {
        "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/ja/Firefox%20Setup%20$version.exe#/dl.7z",
        "hash": {
          "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
          "regex": "$sha512\\s+win32/ja/$basename"
        }
      }
    }
  }
}