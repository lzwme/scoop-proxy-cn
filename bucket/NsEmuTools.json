{
  "homepage": "https://github.com/triwinds/ns-emu-tools",
  "description": "A tool for installing / updating the NS simulator",
  "license": "AGPL-3.0-only",
  "version": "0.5.3",
  "url": "https://github.com/triwinds/ns-emu-tools/releases/download/0.5.3/NsEmuTools.exe",
  "hash": "3f38b7cfebfc8e5153a663dc9c37551702e71886680df1973edac681f45816e9",
  "shortcuts": [
    [
      "NsEmuTools.exe",
      "NS Emu Tools"
    ]
  ],
  "pre_install": [
    "if (!(Test-Path \"$dir\\config.json\")) {",
    "$json = @{}",
    "$yuzu = @{",
    "\"yuzu_path\" = \"F:\\emu\\Yuzu\"",
    "\"yuzu_version\" = \"\"",
    "\"yuzu_firmware\" = \"\"",
    "\"branch\" = \"ea\"",
    "}",
    "$ryujinx = @{",
    "\"path\" = \"F:\\emu\\Ryujinx\"",
    "\"version\" = \"\"",
    "\"firmware\" = \"\"",
    "\"branch\" = \"ava\"",
    "}",
    "$ui = @{",
    "\"lastOpenEmuPage\" = \"yuzu\"",
    "\"dark\" = $true",
    "\"mode\" = \"auto\"",
    "}",
    "$network = @{",
    "\"firmwareSource\" = \"direct\"",
    "\"githubApiMode\" = \"direct\"",
    "\"githubDownloadMirror\" = \"direct\"",
    "\"useDoh\" = $true",
    "\"proxy\" = \"system\"",
    "}",
    "$download = @{",
    "\"autoDeleteAfterInstall\" = $true",
    "\"disableAria2Ipv6\" = $true",
    "\"removeOldAria2LogFile\" = $true",
    "\"verifyFirmwareMd5\" = $true",
    "}",
    "$json.Add(\"yuzu\", $yuzu)",
    "$json.Add(\"ryujinx\", $ryujinx)",
    "$json.Add(\"setting\", @{",
    "\"ui\" = $ui",
    "\"network\" = $network",
    "\"download\" = $download",
    "})",
    "$json | ConvertTo-Json | Out-File \"$dir\\config.json\" -Encoding ascii",
    "}"
  ],
  "persist": "config.json",
  "checkver": "github",
  "autoupdate": {
    "url": "https://github.com/triwinds/ns-emu-tools/releases/download/$version/NsEmuTools.exe"
  }
}