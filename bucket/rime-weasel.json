      "/sync"
    ],
    [
      "WeaselDeployer.exe",
      "【小狼毫】 重新部署",
      "/deploy"
    ],
    [
      "WeaselServer.exe",
      "【小狼毫】 算法服务"
    ]
  ],
  "env_set": {
    "rime_dir": "$persist_dir\\AppData",
    "plum_dir": "$persist_dir\\AppData\\plum"
