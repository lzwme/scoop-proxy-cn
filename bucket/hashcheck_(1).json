  "installer": {
    "script": [
      "Expand-7zipArchive -Path \"$dir\\$fname\" -Removal -Overwrite 'Rename'",
      "Rename-Item \"$dir\\`$0_1\" 'HashCheck32.dll' -Force",
      "Rename-Item \"$dir\\`$0\" 'HashCheck64.dll' -Force",
