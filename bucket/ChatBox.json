  "extract_dir": "PFiles\\chatbox",
  "url": "https://ghproxy.net/https://github.com/Bin-Huang/chatbox/releases/download/v0.4.5/chatbox_0.4.5_x64_en-US.msi",
  "hash": "1fb0987ada9159bd498eebe5cc49f7c169b28692452532e5c0f3a38dbc283bd8",
  "shortcuts": [
    [
      "chatbox.exe",
      "ChatGPT"
