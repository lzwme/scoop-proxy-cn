{
  "version": "0.0.2",
  "description": "Font merged from Roboto and Noto Sans JP",
  "homepage": "https://github.com/s0racat/RobotoNotoJP/",
  "license": "SIL Open Font License 1.1",
  "url": "https://ghproxy.net/https://github.com/s0racat/RobotoNotoJP/releases/download/v0.0.2/RobotoNotoJP.zip",
  "installer": {
    "script": [
      "$fonts = (New-Object -ComObject Shell.Application).Namespace(0x14)",
      "dir \"$dir/*.ttf\" | %{ $fonts.CopyHere($_.fullname) }"
    ]
  },
  "uninstaller": {
    "script": [
      "if ($cmd -eq \"uninstall\") {",
      "    Write-Host \"To uninstall it completely, you have to delete it from the fonts in the control panel, which can be launched with ``control fonts``.\" -Foreground Magenta",
      "}"
    ]
  },
  "checkver": "github",
  "autoupdate": {
    "url": "https://ghproxy.net/https://github.com/s0racat/RobotoNotoJP/releases/download/v$version/RobotoNotoJP.zip"
  }
}