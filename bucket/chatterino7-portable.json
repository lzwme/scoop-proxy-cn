  "architecture": {
    "64bit": {
      "url": "https://ghfast.top/https://github.com/SevenTV/chatterino7/releases/download/nightly-build/chatterino-windows-x86-64-Qt-6.9.3.zip",
      "hash": "059574356c6ec4de1ce98cacf13efd1bf4206468b98800772580e33a354245a5"
    }
  },
  "extract_dir": "Chatterino2",
  "pre_install": [
    "Get-ChildItem \"$dir/chatterino.exe\" | Rename-Item -NewName { $_.name.Replace('o', 'o7-portable') }",
    "'portable' | Out-File -Encoding utf8 -Append \"$dir/modes\""
  ],
  "persist": [
    "Logs",
    "Misc",
    "Settings"
  ],
  "shortcuts": [
    [
      "chatterino7-portable.exe",
      "Chatterino7-portable"
    ]
  ],
  "bin": "chatterino7-portable.exe",
  "checkver": {
    "script": [
      "try {",
      "    $null = (Invoke-WebRequest https://ghfast.top/https://raw.githubusercontent.com/SevenTV/chatterino7/chatterino7/.github/workflows/build.yml).Content -cmatch 'os: windows-latest\\s+qt-version: ([\\d.]+)'",
      "    $Matches[1],",
      "    (Invoke-RestMethod 'https://api.github.com/repositories/342454835/actions/workflows/build.yml/runs?branch=chatterino7&status=success').workflow_runs[0].id -join ' '",
      "}",
      "catch { '' }"
    ],
    "regex": "\\A(?<qt>[\\d.]+) (\\d+)\\Z"
  },
  "autoupdate": {
    "architecture": {
      "64bit": {
        "url": "https://ghfast.top/https://github.com/SevenTV/chatterino7/releases/download/nightly-build/chatterino-windows-x86-64-Qt-$matchQt.zip"
      }
    }
  }
}