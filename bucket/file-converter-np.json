  "pre_install": [
    "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
    "Start-Process 'msiexec' -Wait -Verb 'RunAs' -WindowStyle 'Hidden' -ArgumentList @('/i', \"$dir\\setup.msi_\", '/qn')",
